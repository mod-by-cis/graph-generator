// 
// @file ./.vscode/settings.json
// @author https://github.com/j-Cis
// 
// @lastmodified 2025-06-12T13:26:42.390Z+02:00
// @description Plik konfiguracyjny edytora vscode/vscodium
// 

{
  // =================================================================
  // USTAWIENIA PROJEKTU (BEZPIECZNE DO WSPÓŁDZIELENIA)
  // Te ustawienia zapewniają spójne środowisko dla każdego,
  // kto pracuje nad tym projektem.
  // =================================================================

  // =================================================================
  //  1. EDYTOR - WYGLĄD I ZACHOWANIE
  // =================================================================
  // --- Czcionka i jej wygląd ---
  "editor.fontFamily": "FiraCode,  Fira Code, Consolas, 'Courier New', monospace",
  "editor.fontSize": 13,
  "editor.fontLigatures": true,
  "apc.font.family": "FiraCode,  Fira Code",
  "apc.monospace.font.family": "FiraCode,  Fira Code",
  "chat.editor.fontFamily": "FiraCode,  Fira Code",
  "debug.console.fontFamily": "FiraCode,  Fira Code",
  "editor.codeLensFontFamily": "FiraCode,  Fira Code",
  "editor.inlayHints.fontFamily": "FiraCode,  Fira Code",
  "editor.inlineSuggest.fontFamily": "FiraCode,  Fira Code",
  "markdown.preview.fontFamily": "FiraCode,  Fira Code,-apple-system, BlinkMacSystemFont, 'Segoe WPC', 'Segoe UI', system-ui, 'Ubuntu', 'Droid Sans', sans-serif",
  "scm.inputFontFamily": "FiraCode,  Fira Code",
  "terminal.integrated.fontFamily": "FiraCode,  Fira Code",
  // --- Wcięcie, Zawijanie i Prowadnice ---
  "editor.tabSize": 2,
  "editor.wordWrap": "wordWrapColumn",
  "editor.wordWrapColumn": 185,
  "editor.rulers": [
    46,
    92,
    138,
    184
  ],
  "editor.guides.bracketPairs": true,
  "editor.guides.indentation": true,
  // --- Inne Ustawienia Edytora ---
  "editor.linkedEditing": true,
  "editor.mouseWheelZoom": true,
  "editor.multiCursorModifier": "alt",
  "editor.quickSuggestions": {
    "strings": true
  },
  "editor.experimental.preferTreeSitter.typescript": true,
  "editor.inlayHints.enabled": "off",

  // =================================================================
  //  2. INTERFEJS UŻYTKOWNIKA (WORKBENCH)
  // =================================================================
  // --- Wygląd Ogólny i Motywy ---
  "window.zoomLevel": 0.4,
  "workbench.iconTheme": "material-icon-theme",
  "workbench.productIconTheme": "material-product-icons",
  "workbench.preferredLightColorTheme": "One Dark Modern",
  // --- Układ Paneli, Okien i Zakładek ---
  "window.density.editorTabHeight": "compact",
  "workbench.panel.defaultLocation": "top",
  "breadcrumbs.enabled": true,
  "workbench.tree.enableStickyScroll": true,
  "workbench.editor.tabActionLocation": "left",
  "workbench.editor.labelFormat": "short",
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.pinnedTabSizing": "normal",
  "workbench.editor.pinnedTabsOnSeparateRow": true,
  // --- Inne Ustawienia Interfejsu ---
  "workbench.editor.preferHistoryBasedLanguageDetection": true,
  "workbench.commandPalette.experimental.suggestCommands": true,
  "workbench.commandPalette.experimental.askChatLocation": "chatView",
  // --- Dostosowana Paleta Barw ---
  "workbench.colorCustomizations": {
    "activityBar.border": "#272324",
    "menubar.selectionBackground": "#6b0b18",
    "menu.background": "#6b0b18",
    "menu.selectionBackground": "#220a0d",
    "sideBar.background": "#0e0d0d",
    "sideBarSectionHeader.background": "#181011",
    "sideBarSectionHeader.border": "#3d2a2d",
    "panel.background": "#1a1717",
    "panelTitle.activeForeground": "#eb677b",
    "panelTitle.inactiveForeground": "#6e5358",
    "panelSectionHeader.background": "#272324",
    "editorGroupHeader.tabsBackground": "#130e0f",
    "tab.border": "#272122",
    "tab.activeBackground": "#0e0d0d",
    "tab.inactiveBackground": "#1a1717",
    "tab.hoverBackground": "#6b0b18",
    "tab.hoverBorder": "#6b0b18",
    "tab.activeBorderTop": "#a89799",
    "tab.activeModifiedBorder": "#6b0b18",
    "tab.inactiveModifiedBorder": "#6b0b18",
    "editorGutter.background": "#0e0d0d",
    "editorHoverWidget.background": "#3b2b2d",
    "editorStickyScrollHover.background": "#6b0b18",
    "editorWidget.background": "#490f17",
    "outputViewStickyScroll.background": "#490f17",
    "editorSuggestWidget.background": "#181011",
    "editorSuggestWidget.foreground": "#ebe5e5",
    "editorSuggestWidget.highlightForeground": "#8f4c54",
    "editorSuggestWidget.selectedBackground": "#81212c",
    "editorSuggestWidget.selectedForeground": "#e6ced1",
    "editorSuggestWidget.selectedIconForeground": "#130406",
    "editorSuggestWidget.focusHighlightForeground": "#181011",
    "list.hoverBackground": "#6b0b18",
    "list.activeSelectionBackground": "#6b0b18",
    "list.inactiveSelectionBackground": "#3d2a2d",
    "focusBorder": "#6b0b18",
    "button.background": "#490f17",
    "button.hoverBackground": "#6b0b18",
    "input.background": "#1a1a1a",
    "input.border": "#29080c",
    "input.placeholderForeground": "#dd4c5d",
    "dropdown.background": "#2b191b",
    "dropdown.border": "#272324",
    "dropdown.listBackground": "#2B191B",
    "inputOption.activeBackground": "#3f1f23",
    "inputOption.activeBorder": "#361519",
    "inputOption.activeForeground": "#daacb1",
    "inputOption.hoverBackground": "#6b0b18",
    "breadcrumb.background": "#0e0d0d",
    "notebook.background": "#FFFFFF",
    "terminal.selectionBackground": "#db223b46"
  },
  // =================================================================
  //  3. JĘZYKI I FORMATOWANIE
  // =================================================================
  // --- Formatowanie przy Zapisie i Formatery ---
  "editor.formatOnSave": true,
  "[typescript]": {
    "editor.defaultFormatter": "rvest.vs-code-prettier-eslint"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "denoland.vscode-deno"
  },
  "[javascript]": {
    "editor.defaultFormatter": "denoland.vscode-deno"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "denoland.vscode-deno"
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features",
    "editor.formatOnSave": false
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features",
    "editor.formatOnSave": false
  },
  "[css]": {
    "editor.defaultFormatter": "denoland.vscode-deno"
  },
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features",
    "editor.formatOnSave": false,
    "editor.formatOnPaste": false
  },
  "[dot]": {
    "editor.defaultFormatter": "tintinweb.graphviz-interactive-preview"
  },
  // --- Słownik (Sprawdzanie Pisowni) ---
  "cSpell.language": "en,pl-PL,pl",
  "cSpell.words": [
    "accordion",
    "beforeinstallprompt",
    "Bundlowanie",
    "commituje",
    "denoland",
    "denonext",
    "divis",
    "esbuild",
    "eventu",
    "Graphviz",
    "HANDLERY",
    "Hiperkrawędź",
    "hpcc",
    "Hypergraph",
    "importscripts",
    "Inicjalizacja",
    "lastmodified",
    "loadera",
    "odmontowaniu",
    "odmontowany",
    "odmontowywany",
    "PIORYTET",
    "preact",
    "predefiniowanych",
    "promptem",
    "propsów",
    "propsy",
    "rankdir",
    "responsywne",
    "Scriptowi",
    "stackowania",
    "stefanzweifel",
    "SWVERPWA",
    "timesnap",
    "VNode",
    "Waćpaństwo",
    "wieloliniową",
    "Workera",
    "Workerem",
    "Workery",
    "Wyrenderuj",
    "zdebugować"
  ],
  // =================================================================
  //  4. NARZĘDZIA I ROZSZERZENIA
  // =================================================================
  // --- Deno ---
  "deno.enable": true,
  "deno.enablePaths": [
    "./"
  ],
  "deno.lint": true,
  "deno.cacheOnSave": true,
  "deno.codeLens.implementations": true,
  "deno.codeLens.references": true,
  "deno.codeLens.referencesAllFunctions": true,
  "deno.codeLens.test": true,
  "deno.trace.server": "verbose",
  // --- Git ---
  "git.autofetch": true,
  // --- Terminal ---
  "terminal.integrated.fontLigatures": true,
  "terminal.integrated.fontSize": 12,
  // =================================================================
  //  5. ZARZĄDZANIE PLIKAMI
  // =================================================================
  "files.insertFinalNewline": true,
  // --- Wykluczenia z Widoku i Wyszukiwania ---
  "files.exclude": {
    "**/deno.lock": true,
    "**/node_modules": true
  },
  "search.exclude": {
    "**/.unotes": true,
    "**/.git": true,
    "**/.history": true,
    "**/deno.lock": true,
    "**/docs/gen": true,
    "**/node_modules": true
  },
  "files.readonlyInclude": {
    "**/docs/gen/**": true,
    "**/.git/**": true,
    "**/.history/**": true
  },
  "typescript.tsserver.experimental.enableProjectDiagnostics": false
}
